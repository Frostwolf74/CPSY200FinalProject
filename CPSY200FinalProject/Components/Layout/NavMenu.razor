@inject HeaderService HeaderService

<input type="checkbox" title="Navigation menu" class="navbar-toggler"/>

<div class="nav-scrollable" onclick="document.querySelector('.navbar-toggler').click()" style="background-color: #d9d9d9">
    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" @onclick=@(() => SetHeader("Customer")) Match="NavLinkMatch.All" style="background-color: #101010;">
                <span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span> Customer
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="equipment" @onclick=@(() => SetHeader("Equipment")) Match="NavLinkMatch.All" style="background-color: #101010;">
                <span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span> Equipment
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="rental" @onclick=@(() => SetHeader("Rental")) Match="NavLinkMatch.All" style="background-color: #101010;">
                <span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span> Rental
            </NavLink>
        </div>

        
    </nav>
</div>

@code {
    private void SetHeader(string title)
    {
        HeaderService.SetHeader(title);
    }
}

